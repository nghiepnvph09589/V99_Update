@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>TIÊU DÙNG</title>
    <link rel="shortcut icon" href="~/Content/images/LogoHT.png" />
    @Styles.Render("~/dekko/css")
    @Scripts.Render("~/layout/js")
    @Scripts.Render("~/dekko/js")
    @Scripts.Render("~/bundle/js")
</head>
<body style="background: #f0f0f0;">
    @*<div class="divLoading" style="display: none">
        <img class="spinner" src="~/Content/images/index.rotate-pie-preloader-gif.svg" />
    </div>*@
    <div class="bg-image"></div>
    <div class="bg-text" style="height:520px;width:360px;">
            <div class="col-md-12 px-0">
                <img src="~/Content/images/v99.png" class="mt-3" style="height:10%;width:76%; margin-bottom:55px;" />
            </div>
       
        @*<h3 class="mt-3 mb-3">ADMIN</h3>*@
        <div class="txtLogin row mt-4" id="txtLogin">
            <input type="text" class="form-control col-md-10 col-sm-10 inputLogin" placeholder="Tài khoản" id="txtUsernameLogin" name="">

            <i class="iconUsernameLogin fa fa-user-o mt-1" style="color:black; "></i>
        </div>
        <div class="txtLogin row mt-1" id="txtLogin">
            <input type="password" class="form-control col-md-10 col-sm-10 inputLogin" placeholder="Mật khẩu" id="txtPasswordLogin" name="">
            <i class="iconPasswordLogin fa fa-unlock-alt mt-1" style="color:black; "></i>
        </div>
        <button class="col-md-10 col-sm-10 btn btn-default mt-3 btnLogin" id="btnLogin" onclick="Login()">ĐĂNG NHẬP</button>
    </div>
</body>
</html>

<script>

$(document).ready(function () {

    $("#txtUsernameLogin").focus();

    $('.inputLogin').keypress(function (e) {
        var key = e.which;
        if (key == 13) {
            $("#btnLogin").click();
        }
    });

});

</script>