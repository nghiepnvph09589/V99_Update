<form id="form_update_item" name="form_update_item">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4 col-sm-12 ">
                    <p class="color-require mt-2 mb-0"><label class="text-dark">Mã sản phẩm</label> *</p>
                </div>
                <div class="col-md-8 col-sm-12 mb-md-2 mb-sm-2 mt-2">
